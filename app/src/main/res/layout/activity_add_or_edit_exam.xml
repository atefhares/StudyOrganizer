<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ToolBarStyle" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:text="New Text"
        android:id="@+id/ExamErrorTV"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#9f1010"
        android:textStyle="bold"
        android:elegantTextHeight="false"
        android:typeface="serif" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LayoutDivider" />

    <ScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context="com.example.atefhares.study_organizer.NewOrEditActivities.AddOrEditClassActivity"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView3"
                        android:src="@drawable/yearicon"
                        android:layout_marginBottom="100dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="20dp">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/select_academic_year_term"
                            android:id="@+id/textView27" />

                        <Space
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:paddingLeft="20dp">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="Year:"
                                android:id="@+id/textView25"
                                android:layout_gravity="center"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:textAlignment="center"
                                android:gravity="left|center"
                                android:paddingLeft="5dp"
                                android:textSize="20sp" />

                            <Spinner
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/YearSpinner"
                                android:spinnerMode="dialog"
                                android:dropDownWidth="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:layout_marginRight="20dp" />
                        </LinearLayout>

                        <Space
                            android:layout_width="fill_parent"
                            android:layout_height="1dp" />
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/LayoutDivider" />
                        <Space
                            android:layout_width="fill_parent"
                            android:layout_height="1dp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="150dp"
                            android:layout_weight="1"
                            android:paddingLeft="20dp">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="Term:"
                                android:id="@+id/textView26"
                                android:layout_gravity="center"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:textAlignment="center"
                                android:gravity="left|center"
                                android:paddingLeft="5dp"
                                android:textSize="20sp" />

                            <Spinner
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/TermSpinner"
                                android:spinnerMode="dialog"
                                android:dropDownWidth="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:layout_marginRight="20dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LayoutDivider" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="fill_parent"
                            android:id="@+id/SelectedClassColorTV"
                            android:layout_marginLeft="0.5dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Select Class"
                                android:id="@+id/textView2"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:padding="5dp" />

                            <Spinner
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/ClassSpinner"
                                android:spinnerMode="dialog"
                                android:dropDownWidth="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_height="match_parent"
                        android:layout_width="1dp"
                        android:background="@color/LayoutDivider" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:id="@+id/ExamModuleTV"
                        android:gravity="center"
                        android:hint="@string/module"
                        android:inputType="text"
                        android:maxLength="30"
                        android:textSize="20sp"
                        android:background="#00000000"
                        android:textColor="#433f3f"
                        android:layout_weight="1"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:layout_gravity="center" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LayoutDivider" />

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView2"
                        android:src="@drawable/place" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:id="@+id/ExamPlace"
                        android:hint="@string/place"
                        android:inputType="text|time"
                        android:maxLength="15"
                        android:textSize="20sp"
                        android:background="#00000000"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:textColor="#433f3f"
                        android:paddingRight="20dp"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LayoutDivider" />

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView"
                        android:src="@drawable/times" />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        tools:context=".NewOrEditActivities.AddOrEditTimeActivity"
                        android:orientation="vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select Date"
                                android:id="@+id/textView28" />

                            <Space
                                android:layout_width="fill_parent"
                                android:layout_height="10dp" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Exam Date"
                                android:id="@+id/ExamDateTV"
                                android:paddingLeft="20dp"
                                android:paddingRight="30dp"
                                android:textSize="25sp"
                                android:textColor="#000000"
                                android:background="?attr/selectableItemBackground"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <Space
                            android:layout_width="fill_parent"
                            android:layout_height="10dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/LayoutDivider" />

                        <Space
                            android:layout_width="fill_parent"
                            android:layout_height="10dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select Start Time / Duration"
                                android:id="@+id/textView29" />

                            <Space
                                android:layout_width="fill_parent"
                                android:layout_height="10dp" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="1">

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:text="Start time"
                                        android:id="@+id/textView30"
                                        android:textSize="20dp"
                                        android:layout_gravity="center" />

                                    <TextView
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:text="StartTime"
                                        android:id="@+id/EXstartTimeTV"
                                        android:paddingLeft="15dp"
                                        android:paddingRight="15dp"
                                        android:textSize="25sp"
                                        android:textColor="#000000"
                                        android:background="?attr/selectableItemBackground"
                                        android:layout_gravity="center" />
                                </LinearLayout>

                                <Space
                                    android:layout_width="fill_parent"
                                    android:layout_height="10dp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/LayoutDivider" />
                                <Space
                                    android:layout_width="fill_parent"
                                    android:layout_height="10dp" />

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:weightSum="1">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Duration (in Min)"
                                        android:id="@+id/textView62"
                                        android:textSize="20dp"
                                        android:layout_gravity="center" />

                                    <Spinner
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/DurationSpinner"
                                        android:spinnerMode="dialog"
                                        android:dropDownWidth="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textAlignment="center"
                                        android:paddingLeft="15dp"
                                        android:paddingRight="15dp"
                                        android:layout_marginRight="30dp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="10dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/LayoutDivider"
                    android:padding="20dp"
                    android:layout_gravity="bottom|center" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="Delete this Class"
                    android:id="@+id/DeleteTV"
                    android:layout_gravity="bottom|center"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textColor="#9e0101" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
