<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewOrEditActivities.AddOrEditTimeActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:text="New Text"
        android:id="@+id/TermErrorTV"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#9f1010"
        android:textStyle="bold"
        android:elegantTextHeight="false"
        android:typeface="serif" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LayoutDivider" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Term Name"
        android:inputType="text"
        android:textSize="20sp"
        android:background="#00000000"
        android:textColor="#433f3f"
        android:layout_weight="0.17"
        android:paddingLeft="10dp"
        android:id="@+id/termName" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LayoutDivider" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1" >

        <ImageView
            android:layout_width="28dp"
            android:layout_height="48dp"
            android:id="@+id/imageView6"
            android:src="@drawable/calendar" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Start/End Times"
                android:id="@+id/textView29" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="From"
                        android:id="@+id/textView30"
                        android:textSize="20dp"
                        android:paddingRight="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date"
                        android:id="@+id/TermStartDateTV"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:background="?attr/selectableItemBackground"
                        android:layout_weight="1" />
                </LinearLayout>

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="10dp" />

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LayoutDivider" />
                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="10dp" />

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="To  "
                        android:id="@+id/textView62"
                        android:textSize="20dp"
                        android:paddingRight="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date"
                        android:id="@+id/TermEndDateTV"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:paddingLeft="15dp"
                        android:background="?attr/selectableItemBackground"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LayoutDivider" />

</LinearLayout>
