<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewOrEditActivities.ClassDetailsActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/ExamDetailsTB"
        android:layout_alignParentEnd="false">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context="com.example.atefhares.study_organizer.NewOrEditActivities.AddOrEditClassActivity"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="10dp">

                <View
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="@color/LayoutDivider" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/ExamModuleTV"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/module"
                    android:inputType="text"
                    android:maxLength="30"
                    android:textSize="20sp"
                    android:background="#00000000"
                    android:textColor="#433f3f"
                    android:longClickable="false" />
                <View
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="@color/LayoutDivider" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/LayoutDivider" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/place" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/ExamPlaceTV"
                    android:hint="@string/place"
                    android:inputType="text|time"
                    android:maxLength="15"
                    android:textSize="20sp"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:textColor="#433f3f"
                    android:longClickable="false"
                    android:paddingRight="20dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/LayoutDivider" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/class_logo"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/ExamClassTV"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:textColor="#433f3f"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:hint="Class"
                    android:background="@drawable/ripple_effect_square"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <Space
                android:layout_width="fill_parent"
                android:layout_height="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/LayoutDivider" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="10dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                layout_width="match_parent"
                layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/times" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    tools:context=".NewOrEditActivities.AddOrEditTimeActivity"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exam Date"
                            android:id="@+id/textView28" />

                        <Space
                            android:layout_width="fill_parent"
                            android:layout_height="10dp" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Exam Date"
                            android:id="@+id/ExamDateTV"
                            android:paddingLeft="20dp"
                            android:paddingRight="30dp"
                            android:textSize="25sp"
                            android:textColor="#000000"
                            android:background="?attr/selectableItemBackground"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <Space
                        android:layout_width="fill_parent"
                        android:layout_height="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/LayoutDivider" />

                    <Space
                        android:layout_width="fill_parent"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exam Start Time / Duration"
                            android:id="@+id/textView29" />

                        <Space
                            android:layout_width="fill_parent"
                            android:layout_height="10dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="Start time"
                                    android:id="@+id/textView30"
                                    android:textSize="20dp"
                                    android:layout_gravity="center" />

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:text="StartTime"
                                    android:id="@+id/ExamStartTimeTV"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:textSize="25sp"
                                    android:textColor="#000000"
                                    android:background="?attr/selectableItemBackground"
                                    android:layout_gravity="center" />
                            </LinearLayout>

                            <Space
                                android:layout_width="fill_parent"
                                android:layout_height="10dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/LayoutDivider" />

                            <Space
                                android:layout_width="fill_parent"
                                android:layout_height="10dp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Duration (in Min)"
                                    android:id="@+id/textView62"
                                    android:textSize="20dp"
                                    android:layout_gravity="center" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Duration"
                                    android:id="@+id/ExamDurationTV"
                                    android:textSize="25sp"
                                    android:layout_gravity="center"
                                    android:paddingLeft="10dp"
                                    android:textColor="#030303" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
