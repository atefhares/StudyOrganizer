<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ToolBarStyle" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:text="New Text"
        android:id="@+id/YearErrorTV"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#9f1010"
        android:textStyle="bold"
        android:elegantTextHeight="false"
        android:typeface="serif" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LayoutDivider" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/imageView6"
                        android:src="@drawable/calendar"
                        android:paddingLeft="10dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choose Start/End Dates"
                            android:id="@+id/textView29" />

                        <Space
                            android:layout_width="fill_parent"
                            android:layout_height="10dp" />

                        <Space
                            android:layout_width="fill_parent"
                            android:layout_height="10dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:text="From"
                                    android:id="@+id/textView30"
                                    android:textSize="20dp"
                                    android:layout_weight="0.18" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Start Date"
                                    android:id="@+id/startDateTV"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:textSize="25dp"
                                    android:textColor="#000000"
                                    android:background="?attr/selectableItemBackground"/>
                            </LinearLayout>

                            <Space
                                android:layout_width="fill_parent"
                                android:layout_height="10dp" />

                            <Space
                                android:layout_width="fill_parent"
                                android:layout_height="10dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/LayoutDivider" />

                            <Space
                                android:layout_width="fill_parent"
                                android:layout_height="10dp" />

                            <Space
                                android:layout_width="fill_parent"
                                android:layout_height="10dp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="1">

                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:text="to"
                                    android:id="@+id/textView62"
                                    android:textSize="20dp"
                                    android:layout_weight="0.15" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="End Date"
                                    android:id="@+id/endDateTV"
                                    android:textSize="25dp"
                                    android:textColor="#000000"
                                    android:paddingLeft="15dp"
                                    android:background="?attr/selectableItemBackground"/>

                            </LinearLayout>

                            <Space
                                android:layout_width="fill_parent"
                                android:layout_height="10dp" />


                        </LinearLayout>

                </LinearLayout>

            </LinearLayout>

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LayoutDivider" />

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:paddingLeft="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:id="@+id/imageView4"
                            android:src="@drawable/term" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="30dp">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Add New Term"
                                android:id="@+id/addNewTerm"
                                android:textSize="20sp"
                                android:textColor="#b80c0c"
                                android:background="?attr/selectableItemBackground"
                                android:paddingBottom="20dp" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/VL"
                                android:animateLayoutChanges="true"
                                android:paddingRight="10dp">

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/LayoutDivider"
                android:padding="20dp" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="Delete this year"
                android:id="@+id/DeleteTV"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="#9e0101" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>