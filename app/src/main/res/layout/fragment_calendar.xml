                    android:background="#e2ffffff" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="70dp"
                    android:text="02 pm"
                    android:id="@+id/h2pm"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:background="#e2ffffff" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="70dp"
                    android:text="03 pm"
                    android:id="@+id/h3pm"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:background="#e2ffffff" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="70dp"
                    android:text="04 pm"
                    android:id="@+id/h4pm"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:background="#e2ffffff" />

