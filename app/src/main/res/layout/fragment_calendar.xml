                    android:layout_height="70dp"
                    android:text="06 pm"
                    android:id="@+id/h6pm"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:background="#e2ffffff" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="70dp"
                    android:text="07 pm"
                    android:id="@+id/h7pm"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:background="#e2ffffff" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="70dp"
                    android:text="08 pm"
                    android:id="@+id/h8pm"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:background="#e2ffffff" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="70dp"
                    android:text="09 pm"
                    android:id="@+id/h9pm"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:background="#e2ffffff" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="70dp"
                    android:text="10 pm"
                    android:id="@+id/h10pm"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:background="#e2ffffff" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="70dp"
                    android:text="11 pm"
                    android:id="@+id/h11pm"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:background="#e2ffffff" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/RL"
                android:layout_weight="1">

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
