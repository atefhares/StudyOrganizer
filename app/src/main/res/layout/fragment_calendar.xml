                    android:background="#e2ffffff" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="70dp"
                    android:text="06am"
                    android:id="@+id/h6am"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:background="#e2ffffff" />

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="70dp"
                    android:text="07am"
                    android:id="@+id/h7am"
